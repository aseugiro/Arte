@model IEnumerable<WebAppArte.Models.Paint>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="text-center">
   <button name="button" onclick="BackMaster()">Artistas</button>
</div>

<h1>Pinturas</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
              
                <a href="#" onclick="Delete(@item.ID,@ViewData["IDArtist"])">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>

@if(Model.Count()==0){
    <div class="text-center">
  No hay información para mostrar

</div>
 }
<script>

    function Delete(ID,IDArtist){
        var resultado=confirm("Esta seguro de eliminar el registro ?");
        if(resultado==true){
            window.location = '@Url.Action("Delete", "Paint")?ID='+ID+"&IDArtist="+IDArtist; 
        }

    }
    
    function BackMaster(){
         window.location = '@Url.Action("GetArtist", "Home")'; 
    }
</script>